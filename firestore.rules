rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isAuthenticated() {
      return request.auth != null;
    }

    function isCompanyMember(companyId) {
      return isAuthenticated() && request.auth.token.companyId == companyId;
    }
    
    function isSelf(companyId, userId) {
      return isCompanyMember(companyId) && request.auth.uid == userId;
    }

    // --- Master Admin Access ---
    match /{document=**} {
      allow read, write: if request.auth.uid == "1AKioGfop8PmHhry6uXOz8Rw6qT2";
    }

    // --- Public Leads (Sign Up) ---
    match /leads/{leadId} {
      allow create, update: if true; 
      allow read: if request.auth != null; 
    }

    // --- Tenant Data (Company Specific) ---
    match /companies/{companyId} {
      
      // Default rule: Must be a member to read/update the company doc itself
      allow read: if isCompanyMember(companyId);
      allow update: if isCompanyMember(companyId);

      // =========================================================
      // PUBLIC READ ACCESS (For QR Bill Download)
      // =========================================================
      
      // 1. Sales: Public needs to read the invoice details
      match /sales/{document=**} {
        allow read: if true;
        allow write: if isCompanyMember(companyId);
      }

      // 2. Items: Public needs to read item details (Tax/HSN) for the PDF
      match /items/{document=**} {
        allow read: if true;
        allow write: if isCompanyMember(companyId);
      }

      // 3. Business Info: Public needs Company Address/Logo for the PDF header
      match /business_info/{document=**} {
        allow read: if true;
        allow write: if isCompanyMember(companyId);
      }

      // 4. Sales Settings: Public needs to know if "Salesman Name" should be hidden
      match /settings/sales-settings {
        allow read: if true;
        allow write: if isCompanyMember(companyId);
      }
      
      // =========================================================
      // AUTHENTICATED ONLY SECTIONS
      // =========================================================

      match /users/{userId} {
        allow read: if isCompanyMember(companyId);
        allow create, update: if isSelf(companyId, userId);
        allow delete: if false;
      }
      
      match /users/{userId}/artifacts/{appId}/{collectionId}/{document=**} {
        allow read, write: if isSelf(companyId, userId);
      }
      
      // General Settings (catch-all for other settings like Purchase, etc.)
      match /settings/{settingId} {
        allow read, write: if isCompanyMember(companyId);
      }

      match /counters/{counterId} {
        allow read, write: if isCompanyMember(companyId);
      }
      
      match /counter/{counterId} {
        allow read, write: if isCompanyMember(companyId);
      }
      
      match /attendance/{document=**} {
        allow read, write: if isCompanyMember(companyId);
      }
      
      match /permissions/{role} {
         allow read: if isCompanyMember(companyId);
         allow write: if isCompanyMember(companyId); 
      }

      // Purchases remain private
      match /purchases/{document=**} {
        allow read, write: if isCompanyMember(companyId);
      }

      // Catch-all for any other collections not explicitly listed above
      match /{collection}/{docId} {
        allow read, write: if isCompanyMember(companyId);
      }
    }

    // --- Global Data ---
    match /permissions/{role} {
      allow read: if isAuthenticated();
      allow write: if false;
    }
    
    match /CompanyID/{counterId} {
      allow read, write: if false;
    }
  }
}