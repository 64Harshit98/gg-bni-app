rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Existing rule for Items
    match /companies/{companyId}/items/{itemId}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // --- ADD THIS NEW RULE FOR USERS ---
    match /companies/{companyId}/users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
  }
}